<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/arka_plan_2"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<FrameLayout android:layout_width="350dp">
        <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="EKLE"
                android:id="@+id/btn_ekle"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
            android:background="@drawable/white_border"
            android:backgroundTint="#000"
                android:textSize="50dp"
                android:textStyle="bold"
                />
</FrameLayout>
    </TableRow>


    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout android:layout_width="350dp">
            <Button
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:text="ARA"
                android:id="@+id/btn_ara"
                android:layout_below="@+id/btn_ekle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/white_border"
                android:backgroundTint="#000"
                android:textSize="50dp"
                android:textStyle="bold"
                />

        </FrameLayout>
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout android:layout_width="350dp">
            <Button
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:text="YEDEKLE"
                android:id="@+id/btn_yedekle"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/white_border"
                android:backgroundTint="#000"
                android:textSize="50dp"
                android:textStyle="bold"
                />
        </FrameLayout>
    </TableRow>


    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout android:layout_width="350dp">
            <Button
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:text="İLETİŞİM"
                android:id="@+id/btn_iletisim"
                android:layout_below="@+id/btn_ekle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/white_border"
                android:backgroundTint="#000"
                android:textSize="50dp"
                android:textStyle="bold"
                />

        </FrameLayout>
    </TableRow>

</TableLayout>
