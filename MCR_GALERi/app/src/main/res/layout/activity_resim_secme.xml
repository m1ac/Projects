<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/arka_plan_2"
    tools:context="com.mcr.mcr_galeri.Resim_secme">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:text="RESİM ÇEK"
        android:textSize="45dp"
        android:background="@drawable/white_border"
        android:backgroundTint="#000"
        android:id="@+id/btn_kamera"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:text="RESİM SEÇ"
        android:id="@+id/btn_sdkart"
        android:textSize="45dp"
        android:background="@drawable/white_border"
        android:backgroundTint="#000"
        android:layout_below="@+id/btn_kamera"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
