<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    tools:context="com.mcr.mcr_galeri.Yedekleme"
    android:background="@drawable/arka_plan_2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YEDEĞİ İÇE AKTAR"
        android:id="@+id/btn_iceAktar"
        android:textSize="23dp"
        android:background="@drawable/white_border"
        android:backgroundTint="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YEDEK OLUŞTUR"
        android:id="@+id/btn_disaAktar"
        android:textSize="23dp"
        android:background="@drawable/white_border"
        android:backgroundTint="#000"
        android:layout_below="@+id/btn_iceAktar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="\nAÇIKLAMA\nYedek oluşturulduğunda hafıza kartındaki Pictures/MCR_GALERI klasörüne yedek.txt dosyası oluşturulur.\n----------------------------------------------------------------\nYedeği içeri aktarmak için hafıza kartınızdaki Pictures/MCR_GALERI klasörüne önceden yedeklediğiniz yedek.txt dosyasını ve araba resimlerini kopyalamanız gerekir."
        android:textSize="15dp"
        android:backgroundTint="#000"
        android:textColor="#f00"
        android:backgroundTintMode="screen"
        />

</TableLayout>
